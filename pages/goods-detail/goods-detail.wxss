/* pages/goods-detail/goods-detail.wxss */
.container {
  padding-bottom: 120rpx;
  background-color: #f8f8f8;
  width: 100%;
  box-sizing: border-box;
}

/* 轮播图 */
.swiper-container {
  width: 100%;
  height: 750rpx;
  position: relative;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.swiper {
  width: 100%;
  height: 100%;
}

.swiper-item {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.swiper-image {
  width: 100%;
  height: 100%;
  transition: all 0.3s ease;
  display: block;
}

.swiper-item:active .swiper-image {
  transform: scale(1.05);
}

.indicator {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 30rpx;
  padding: 8rpx 20rpx;
  color: #fff;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 商品信息 */
.goods-info {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.goods-title {
  font-size: 32rpx;
  color: #333;
  margin: 20rpx 0;
  line-height: 1.5;
}

.price-container {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.price-symbol {
  font-size: 32rpx;
  color: #FB7299;
  font-weight: bold;
  margin-right: 4rpx;
}

.goods-price {
  font-size: 48rpx;
  color: #FB7299;
  font-weight: bold;
  display: inline-block;
}

.goods-original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 20rpx;
  display: inline-block;
}

.goods-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.goods-condition {
  background-color: #FEF0F5;
  color: #FB7299;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.goods-views {
  display: flex;
  align-items: center;
}

.goods-views .iconfont {
  margin-right: 6rpx;
}

.goods-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.tag {
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.tag-primary {
  background-color: rgba(251, 114, 153, 0.1);
  color: var(--primary-color);
}

.tag-secondary {
  background-color: rgba(64, 158, 255, 0.1);
  color: #409EFF;
}

.tag-warning {
  background-color: rgba(255, 153, 0, 0.1);
  color: #FF9900;
}

/* 卖家信息 */
.seller-info {
  background-color: #fff;
  padding: 20rpx;
  margin: 0 0 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.seller-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.seller-avatar image {
  width: 100%;
  height: 100%;
}

.seller-detail {
  flex: 1;
}

.seller-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.seller-rating {
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.seller-rating .iconfont {
  color: #FFCC00;
  margin-right: 6rpx;
}

.seller-reviews {
  margin-left: 20rpx;
  color: #FB7299;
}

.contact-seller-btn {
  background-color: #FB7299;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

/* 商品详情 */
.detail-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 6rpx;
  height: 30rpx;
  background-color: #FB7299;
  border-radius: 3rpx;
}

.goods-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 30rpx;
  white-space: pre-wrap;
  word-break: break-all;
}

.goods-location, .goods-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.goods-location .iconfont, .goods-time .iconfont {
  margin-right: 10rpx;
}

/* 商品评价入口 */
.goods-reviews {
  background-color: #fff;
  padding: 30rpx;
  margin: 0 0 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  width: 100%;
  box-sizing: border-box;
  animation: fadeIn 0.5s ease forwards;
  animation-delay: 0.3s;
  opacity: 0;
}

.reviews-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-color);
  position: relative;
  padding-left: 20rpx;
}

.reviews-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: var(--primary-color);
  border-radius: 4rpx;
}

.reviews-summary {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.reviews-rating {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.reviews-count {
  font-size: 24rpx;
  color: var(--light-text);
}

.reviews-empty {
  font-size: 28rpx;
  color: var(--light-text);
  padding: 20rpx 0;
}

.reviews-arrow {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: var(--primary-color);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  background-color: rgba(251, 114, 153, 0.1);
  transition: all 0.3s ease;
}

.reviews-arrow:active {
  transform: translateY(-50%) translateX(6rpx);
  background-color: rgba(251, 114, 153, 0.2);
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  box-sizing: border-box;
}

.action-left {
  display: flex;
  align-items: center;
  width: 180rpx;
}

.action-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 90rpx;
  height: 100%;
  font-size: 24rpx;
  color: #666;
}

.iconfont {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.icon-text {
  font-size: 20rpx;
}

.action-buttons {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 100%;
  overflow: hidden;
}

.action-btn {
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  padding: 0 30rpx;
  border: none;
  line-height: 1;
  flex: 1;
  max-width: 200rpx;
}

.contact-seller {
  background-color: #FFE8EF;
  color: #FB7299;
}

.buy-now {
  background-color: #FB7299;
  color: #fff;
}

/* 动画效果 */
.animate-slide-up {
  animation: slideUp 0.5s ease forwards;
}

@keyframes slideUp {
  from { transform: translateY(40rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

/* 商品评价入口样式 */
.goods-reviews {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.reviews-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.reviews-summary {
  flex: 1;
  display: flex;
  align-items: center;
}

.reviews-rating {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.reviews-count {
  font-size: 24rpx;
  color: #999;
}

.reviews-empty {
  font-size: 24rpx;
  color: #999;
}

.reviews-arrow {
  font-size: 24rpx;
  color: #3cc51f;
}

/* 分享菜单 */
.share-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.share-menu.show {
  visibility: visible;
  opacity: 1;
}

.share-panel {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.share-menu.show .share-panel {
  transform: translateY(0);
}

.share-title {
  text-align: center;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.share-options {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.share-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: transparent;
  padding: 0;
  line-height: normal;
  border: none;
}

.share-option::after {
  border: none;
}

.share-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.share-icon.wechat {
  background-color: #07C160;
}

.share-icon.moments {
  background-color: #07C160;
}

.share-icon .iconfont {
  font-size: 50rpx;
  color: #fff;
}

.share-option text {
  font-size: 24rpx;
  color: #333;
}

.share-cancel {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  border-top: 1rpx solid #f5f5f5;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
} 