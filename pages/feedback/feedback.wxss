/* pages/feedback/feedback.wxss */
page {
  background-color: #f7f7f7;
  height: 100%;
}

.container {
  padding: 30rpx;
  padding-bottom: 120rpx;
}

/* 头部 */
.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 表单容器 */
.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.optional {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

/* 反馈类型选择器 */
.type-selector {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.type-item {
  width: calc(50% - 20rpx);
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  margin: 10rpx;
  transition: all 0.3s;
}

.type-item.active {
  background-color: rgba(251, 114, 153, 0.1);
  border: 1rpx solid #FB7299;
}

.type-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.type-name {
  font-size: 24rpx;
  color: #666;
}

.type-item.active .type-name {
  color: #FB7299;
}

/* 反馈内容 */
.feedback-content {
  width: 100%;
  height: 240rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 联系方式 */
.contact-input {
  width: 100%;
  height: 80rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

/* 图片上传 */
.image-uploader {
  width: 100%;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  z-index: 10;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.upload-icon {
  font-size: 60rpx;
  color: #ccc;
  line-height: 1;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 90rpx;
  background-color: #FB7299;
  color: #fff;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(251, 114, 153, 0.4);
}

.submit-btn.disabled {
  background-color: #ccc;
  box-shadow: none;
}

/* 成功提示 */
.success-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.success-content {
  width: 560rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.success-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
}

.success-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.success-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #FB7299;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
} 