/* pages/search/search.wxss */
page {
  --theme-color: #FB7299;
  --bg-color: #f8f8fa;
  --text-color: #333;
  --light-text: #888;
  --border-color: #eee;
  --shadow-color: rgba(251, 114, 153, 0.1);
  background-color: var(--bg-color);
  font-family: "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

@keyframes float {
  0% { transform: translateY(0px); }
  50% { transform: translateY(-5px); }
  100% { transform: translateY(0px); }
}

@keyframes dotPulse {
  0% { transform: scale(0.8); opacity: 0.5; }
  50% { transform: scale(1.2); opacity: 1; }
  100% { transform: scale(0.8); opacity: 0.5; }
}

.animate-fade-in {
  animation: fadeIn 0.5s ease forwards;
  opacity: 0;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  min-height: 100vh;
}

/* 搜索头部 */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.back-btn .iconfont {
  font-size: 40rpx;
  color: var(--text-color);
}

.search-bar {
  flex: 1;
  position: relative;
  margin-right: 20rpx;
}

.search-input {
  width: 100%;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 70rpx 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-bar .iconfont {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: var(--primary-color);
  font-size: 36rpx;
}

.search-btn {
  font-size: 28rpx;
  color: var(--primary-color);
  white-space: nowrap;
}

/* 历史搜索和热门搜索 */
.search-history, .hot-search, .category-section {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx var(--shadow-color);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 30rpx;
  background-color: var(--theme-color);
  border-radius: 4rpx;
}

.clear-btn {
  font-size: 24rpx;
  color: var(--light-text);
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 10rpx 24rpx;
  background-color: #f0f0f5;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: var(--text-color);
  transition: all 0.3s ease;
}

.tag:active {
  background-color: var(--theme-color);
  color: #fff;
  transform: scale(0.95);
}

.hot-tag {
  background-color: rgba(251, 114, 153, 0.1);
  color: var(--theme-color);
  border: 1px solid rgba(251, 114, 153, 0.2);
}

/* 分类导航 */
.category-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.category-item {
  width: 22%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(251, 114, 153, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.category-icon image {
  width: 50rpx;
  height: 50rpx;
}

.category-name {
  font-size: 24rpx;
  color: var(--text-color);
}

.category-item:active .category-icon {
  transform: scale(0.9);
  background-color: var(--theme-color);
}

/* 搜索结果 */
.search-results {
  flex: 1;
  padding: 0 30rpx 30rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  margin-bottom: 20rpx;
}

.result-count {
  font-size: 24rpx;
  color: var(--light-text);
}

.result-sort {
  display: flex;
}

.sort-item {
  font-size: 24rpx;
  color: var(--light-text);
  margin-left: 30rpx;
  position: relative;
}

.sort-item.active {
  color: var(--theme-color);
  font-weight: bold;
}

.sort-item.active::after {
  content: "";
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 6rpx;
  background-color: var(--theme-color);
  border-radius: 3rpx;
}

/* 商品列表 */
.goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-item {
  width: 48%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx var(--shadow-color);
  transition: all 0.3s ease;
}

.goods-item:active {
  transform: translateY(-5rpx);
  box-shadow: 0 8rpx 24rpx var(--shadow-color);
}

.goods-image {
  width: 100%;
  height: 320rpx;
  position: relative;
}

.goods-image image {
  width: 100%;
  height: 100%;
}

.goods-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding: 4rpx 12rpx;
  background-color: var(--theme-color);
  color: #fff;
  font-size: 20rpx;
  border-radius: 20rpx;
}

.goods-tag.hot {
  background-color: #ff9500;
}

.goods-info {
  padding: 16rpx;
}

.goods-title {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  height: 2.8em;
}

.goods-price {
  font-size: 32rpx;
  color: var(--theme-color);
  font-weight: bold;
  margin-bottom: 10rpx;
}

.goods-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: var(--light-text);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
  animation: float 3s ease-in-out infinite;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-color);
  margin-bottom: 10rpx;
  font-weight: bold;
}

.empty-tips {
  font-size: 26rpx;
  color: var(--light-text);
}

/* 加载更多 */
.loading {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: var(--theme-color);
  margin: 0 8rpx;
  animation: dotPulse 1.4s ease-in-out infinite;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.4s;
}

.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: var(--light-text);
}

.load-more {
  color: var(--theme-color);
} 