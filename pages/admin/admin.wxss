/* pages/admin/admin.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 0;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  overflow: hidden;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  color: #333;
}

.card-content {
  padding: 30rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.section-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.btn {
  width: 100%;
  margin-top: 20rpx;
}

.result {
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.result-content {
  font-size: 26rpx;
  color: #666;
}

.result-item {
  margin-bottom: 10rpx;
  line-height: 1.5;
}

/* 非管理员提示 */
.no-permission {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-permission-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.no-permission-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
}

.back-home {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #FB7299;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #FB7299;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #FB7299;
  border-radius: 2rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  align-items: center;
}

.search-input-wrap {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.search-input-wrap .iconfont {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #FB7299;
  color: #fff;
  border-radius: 35rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-item {
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

.filter-item.active {
  background-color: #FEF0F5;
  color: #FB7299;
}

/* 商品列表 */
.goods-list {
  padding: 20rpx;
}

.goods-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.goods-card {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.goods-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-price {
  font-size: 32rpx;
  color: #FB7299;
  font-weight: bold;
  margin: 10rpx 0;
}

.goods-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.goods-time {
  color: #999;
}

.goods-status {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status-0 {
  background-color: #f5f5f5;
  color: #999;
}

.status-1 {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-2 {
  background-color: #f6ffed;
  color: #52c41a;
}

.goods-actions {
  display: flex;
  padding: 20rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
}

.view-btn {
  background-color: #f5f5f5;
  color: #666;
}

.put-on-btn {
  background-color: #e6f7ff;
  color: #1890ff;
}

.take-down-btn {
  background-color: #fff7e6;
  color: #fa8c16;
}

.delete-btn {
  background-color: #fff1f0;
  color: #f5222d;
}

/* 用户列表 */
.user-list {
  padding: 20rpx;
}

.user-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-card {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.user-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.user-name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.user-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  margin: 10rpx 0;
}

.user-campus {
  color: #999;
}

.user-status {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status-0 {
  background-color: #fff1f0;
  color: #f5222d;
}

.status-1 {
  background-color: #f6ffed;
  color: #52c41a;
}

.user-stats {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.user-stat {
  margin-right: 20rpx;
}

.user-actions {
  display: flex;
  padding: 20rpx;
  justify-content: flex-end;
}

.enable-btn {
  background-color: #f6ffed;
  color: #52c41a;
}

.ban-btn {
  background-color: #fff1f0;
  color: #f5222d;
}

/* 数据统计 */
.statistics-container {
  padding: 20rpx;
}

.stat-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 6rpx;
  height: 30rpx;
  background-color: #FB7299;
  border-radius: 3rpx;
}

.stat-cards {
  display: flex;
  flex-wrap: wrap;
}

.stat-card {
  width: 50%;
  padding: 20rpx;
  box-sizing: border-box;
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  color: #FB7299;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.refresh-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #FB7299;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 40rpx auto;
}

/* 系统设置 */
.settings-container {
  padding: 20rpx;
}

.setting-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
}

.setting-action {
  font-size: 24rpx;
  color: #999;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空列表 */
.empty-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
}

.load-more-text {
  font-size: 24rpx;
  color: #999;
} 