/* pages/goods-reviews/goods-reviews.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 评分统计 */
.rating-stats {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.rating-summary {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 30rpx;
}

.rating-average {
  font-size: 60rpx;
  color: #ffb400;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.rating-stars {
  display: flex;
  margin-bottom: 10rpx;
}

.rating-count {
  font-size: 24rpx;
  color: #999;
}

.rating-distribution {
  padding: 0 20rpx;
}

.rating-bar {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.rating-label {
  width: 60rpx;
  font-size: 24rpx;
  color: #666;
}

.rating-progress {
  flex: 1;
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 20rpx;
}

.rating-progress-inner {
  height: 100%;
  background-color: #ffb400;
  border-radius: 10rpx;
}

.rating-percent {
  width: 60rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

/* 评价列表 */
.review-list {
  padding-bottom: 30rpx;
}

.review-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.review-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.reviewer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.reviewer-info {
  flex: 1;
}

.reviewer-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

.review-rating {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.star {
  font-size: 32rpx;
  color: #ddd;
  margin-right: 6rpx;
}

.star.active {
  color: #ffb400;
}

.rating-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.review-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3cc51f;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 4rpx;
  margin-bottom: 0;
  margin-right: 10rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.no-more-line {
  width: 100rpx;
  height: 1px;
  background-color: #ddd;
}

.no-more-text {
  font-size: 24rpx;
  color: #999;
  margin: 0 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 