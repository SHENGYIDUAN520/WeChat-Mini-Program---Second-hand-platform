/* pages/review/review.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 商品信息 */
.goods-info {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.goods-detail {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-price {
  font-size: 32rpx;
  color: #FB7299;
  font-weight: bold;
}

/* 评价部分 */
.review-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

/* 评分 */
.rating-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.star-group {
  display: flex;
  justify-content: center;
  margin-bottom: 10rpx;
}

.star {
  margin: 0 10rpx;
  font-size: 60rpx;
  color: #ddd;
}

.star.active {
  color: #FFCC00;
}

.rating-text {
  font-size: 28rpx;
  color: #666;
}

/* 标签 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.tag.active {
  background-color: #FEF0F5;
  color: #FB7299;
  border: 1rpx solid #FB7299;
}

/* 评价内容 */
.review-content {
  width: 100%;
  height: 240rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 图片上传 */
.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
}

.upload-btn {
  width: 180rpx;
  height: 180rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 60rpx;
}

/* 匿名选项 */
.anonymous-option {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.checkbox.checked {
  background-color: #FB7299;
  border-color: #FB7299;
  color: #fff;
}

/* 提交按钮 */
.submit-btn-container {
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}

.submit-btn {
  background-color: #FB7299;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.submit-btn[disabled] {
  background-color: #fbb8cb;
  color: #fff;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3cc51f;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 