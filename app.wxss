/**app.wxss**/
@import "iconfont.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page {
  --primary-color: #FB7299;
  --secondary-color: #73C9E5;
  --text-color: #333333;
  --light-text: #999999;
  --background-color: #f8f8f8;
  --card-background: #ffffff;
  --shadow-color: rgba(0, 0, 0, 0.05);
  --accent-color: #FFD700;
  --success-color: #52c41a;
  --warning-color: #fa8c16;
  --error-color: #ff4d4f;
  
  background-color: var(--background-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', Arial, sans-serif;
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
}

/* 卡片样式 */
.card {
  background-color: var(--card-background);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx var(--shadow-color);
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

/* 按钮样式 */
.btn {
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 40rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  box-shadow: 0 6rpx 16rpx rgba(251, 114, 153, 0.3);
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(251, 114, 153, 0.3);
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  box-shadow: none;
}

.btn-secondary {
  background-color: var(--secondary-color);
  box-shadow: 0 6rpx 16rpx rgba(115, 201, 229, 0.3);
}

.btn-success {
  background-color: var(--success-color);
  box-shadow: 0 6rpx 16rpx rgba(82, 196, 26, 0.3);
}

.btn-warning {
  background-color: var(--warning-color);
  box-shadow: 0 6rpx 16rpx rgba(250, 140, 22, 0.3);
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
  position: relative;
  display: inline-block;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 0;
  width: 40rpx;
  height: 6rpx;
  background-color: var(--primary-color);
  border-radius: 3rpx;
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in {
  animation: fadeIn 0.5s ease forwards;
}

@keyframes slideIn {
  from { opacity: 0; transform: translateX(40rpx); }
  to { opacity: 1; transform: translateX(0); }
}

.animate-slide-in {
  animation: slideIn 0.5s ease forwards;
}

@keyframes pulse {
  0% {
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba(251, 114, 153, 0.5);
  }
  
  70% {
    transform: scale(1);
    box-shadow: 0 0 0 6rpx rgba(251, 114, 153, 0);
  }
  
  100% {
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba(251, 114, 153, 0);
  }
}

.animate-pulse {
  animation: pulse 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
  40% {transform: translateY(-20rpx);}
  60% {transform: translateY(-10rpx);}
}

.animate-bounce {
  animation: bounce 2s ease infinite;
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  margin: 0 8rpx;
  animation: loadingDot 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes loadingDot {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-state-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.empty-state-text {
  font-size: 28rpx;
  color: var(--light-text);
  text-align: center;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  font-size: 22rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}

.tag-primary {
  background-color: rgba(251, 114, 153, 0.1);
  color: var(--primary-color);
}

.tag-secondary {
  background-color: rgba(115, 201, 229, 0.1);
  color: var(--secondary-color);
}

.tag-success {
  background-color: rgba(82, 196, 26, 0.1);
  color: var(--success-color);
}

.tag-warning {
  background-color: rgba(250, 140, 22, 0.1);
  color: var(--warning-color);
}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 8rpx var(--shadow-color);
}

/* 评分星星样式 */
.star {
  font-size: 32rpx;
  color: #ddd;
  margin-right: 4rpx;
}

.star.active {
  color: var(--accent-color);
} 
